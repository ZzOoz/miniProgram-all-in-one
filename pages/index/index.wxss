page {
  background: #eee;
}

.main {
  display: flex;
  align-items: flex-start;
}

.column {
  width: 50%;
}

.column_item {
  width: 350rpx;
  background: #fff;
  margin: 30rpx auto;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 10rpx 0 rgba(0, 0, 0, 0.3);
}

.column_item image {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.column_pic {
  display: block;
  width: 350rpx;
  height: 350rpx;
}

.hide {
  display: none;
}

.desc {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
  font-size: 26rpx;
  height: 60rpx;
}

.desc image {
  height: 30rpx;
  width: 30rpx
}

.left,
.right {
  display: flex;
  align-items: center;
}

.left {
  margin-left: 8px;
}


.right image {
  margin-right: 16rpx;
}

.left text {
  font-size: 12px;
  margin-left: 5px;
}

.right text {
  font-size: 24rpx;
  margin-right: 10rpx;
}

/* 遮罩层样式 */
.overlay {
  position: fixed;
  height: 100vh;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: space-evenly;
  z-index: 2 !important;
}

.postType {
  position: absolute;
  bottom: 23%;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}

.postItem {
  display: flex;
  flex-direction: column;
}

.postItem image {
  width: 100rpx;
  height: 100rpx
}

.postIcon {
  position: fixed;
  bottom: 6%;
  right: 5%;
  width: 120rpx;
  height: 120rpx
}

.postIcon image {
  width: 120rpx;
  height: 120rpx
}

.postText {
  font-size: 26rpx;
  text-align: center;
  margin-top: 16rpx;
}

.content {
  color: #222222;
  font-size: 26rpx;
  text-overflow: ellipsis;
  font-family: PingFang SC;
  font-weight: 500;
  overflow: hidden;
  /* white-space: nowrap; */
  margin: 10rpx;
  padding: 6rpx 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.desc {
  color: #666666;
}

.noDynamics {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -83%);
}

.noDynamics text {
  width: 100%;
  display: inline-block;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}